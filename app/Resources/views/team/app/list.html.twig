{% extends 'app/base.html.twig' %}

{% block body %}
    <section class="section">
        <div class="container is-fluid">
            <div class="columns is-multiline">
                {% for team in teams %}
                    <div class="column is-3 has-text-centered">
                        <div class="box">
                            <div>
                                <a href="{{ path('app_team_player_list', { 'team': team.id }) }}">
                                    <img alt="flag" src="{{ asset('images/icons/'~team.flag) }}"/>
                                </a>
                            </div>
                            <div class="has-text-weight-bold">{{ team.name }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
