{% extends 'admin/base.html.twig' %}

{% block body %}
    {% include 'admin/_page_heading.html.twig' with {
        'title': 'Poules',
        'subtitle': 'Liste des poules'
    } %}

    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column is-8">
                    <table class="table is-fullwidth is-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for pool in pools %}
                            <tr>
                                <td><a href="{{ path('admin_pool_show', { 'id': pool.id }) }}">{{ pool.id }}</a></td>
                                <td>{{ pool.name }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a href="{{ path('admin_pool_show', { 'id': pool.id }) }}">show</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('admin_pool_edit', { 'id': pool.id }) }}">edit</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="column">
                    <div class="box">
                        {% include 'pool/admin/_form.html.twig' with {
                            'form': create_form,
                            'submit': 'Cr√©er la poule',
                            'action': path('admin_pool_create')
                        } %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
