{% extends 'app/base.html.twig' %}

{% block body %}
    <section class="hero is-link is-medium">
        <div class="hero-body">
            <div class="container has-text-centered">
                <h1 class="title">Fédération Internationale de Basketball</h1>
            </div>
        </div>
        <div class="hero-foot">
            <nav class="tabs is-boxed is-fullwidth">
                <div class="container">
                    <ul>
                        <li><a href="/">Matches</a></li>
                        <li><a href="/teams">Pays</a></li>
                        <li class="is-active"><a href="/players">Joueurs</a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </section>

    <section class="section">
        <div class="container is-fluid">
            <div class="columns is-multiline">
                {% for player in players %}
                    <div class="column is- has-text-centered">
                        <div class="box">
                            <div class="has-text-weight-bold">{{ player.lastname }}</div>
                            <div class="has-text-weight-bold">{{ player.firstname }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
